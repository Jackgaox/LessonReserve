/* components/searchsingle/searchsingle.wxss */

.single-view-container {
  float: left;
  margin-bottom: 5rpx;
  padding-left: 10rpx;
  width: 97%;
  height: auto;
}

.lesson-container {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  width: 100%;
  /* 自适应高度 */
  min-height: 270rpx;
  margin-top: 5rpx;
  border-bottom: 1px solid #e2e2e2;
}

.lesson-img {
  width: 200rpx;
  height: 270rpx;
  border-radius: 4px;
  margin-top: 10rpx;
}

.lesson-title {
  margin-bottom: 16rpx;
  font-size: 32rpx;
  color: #222;
}

.content-block {
  position: relative;
  display: flex;
  flex-direction: column;
  padding: 0 10rpx;
  width: 65%;
  min-height: 270rpx;
}

.content-row {
  flex-direction: row;
  width: 100%;
  padding-bottom: 10rpx;
}

.lesson-content {
  float: left;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.float-left {
  float: left;
  bottom: 0rpx;
}

.float-right {
  float: right;
  bottom: 0rpx;
}

.float-revoke {
  color: #d43c33;
  float: left;
  bottom: 0rpx;
}
