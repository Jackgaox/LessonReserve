/* pages/lessons/resultPage/resultPage.wxss */

page {
  display: flex;
  flex-direction: column;
}

.group {
  display: flex;
  flex-direction: column;
  position: absolute;
  border-radius: 5px;
  text-align: center;
  margin-left: 50%;
  margin-top: 50%;
  transform: translate(-50%, -50%);
}

.journey-container {
  margin-top: 200rpx;
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
  margin-left: 50%;
  transform: translate(-50%, -50%);
}

.journey {
  font-size: 30rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}

.image {
  width: 350rpx;
  height: 350rpx;
  margin-top: 160rpx;
}

.no_res_container {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no_res_search {
  background-color: #f5f5f5;
  display: flex;
}

.no_res_view {
  background-color: #f5f5f5;
  display: flex;
  height: 100%;
  width: 100%;
  flex-direction: column;
  align-items: center;
}
